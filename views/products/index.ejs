<% layout('layouts/boilerplate')%>

<% for(let product of products){%>
<div class="card mb-3">
    <div class="row ">
      <div class="col-md-4">
        <img src="<%=product.images.length !== 0 ? product.images[0].url : ''%>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=product.name%>  <span class="text-danger"><%=product.price%>$</span></h5>
          <h5><a href="/users/<%=product.shop.author.id%>/shops/<%=product.shop.id%>" class="card-link"><%=product.shop.name%></a></h5>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
      </div>
    </div>
  </div>
  
  <%}%>
